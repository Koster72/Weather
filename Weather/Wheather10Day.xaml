<UserControl x:Class="Weather.Wheather10Day"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Weather"
             mc:Ignorable="d" d:DesignHeight="240" d:DesignWidth="120" Background="White">
    <Grid>
        <Label Content="{Binding Date, Mode = TwoWay}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="50" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding Status, Mode = TwoWay}" Margin="0,50,0,0" TextAlignment="Center" TextWrapping="Wrap"  Background="#FFE8E6E6" Height="50" VerticalAlignment="Top"/>
        <Label Content="{Binding Temp, Mode = TwoWay}" Margin="0,100,0,110"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="{Binding Wind, Mode = TwoWay}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,0,60" Height="49" VerticalAlignment="Bottom"/>
        <Label Content="{Binding Humidity, Mode = TwoWay}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="40" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
